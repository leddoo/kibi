def Nat::add (a: Nat, b: Nat): Nat :=
    Nat::rec(b,
        lam(_: Nat) => Nat,
        a,
        lam(_: Nat, r: Nat) => Nat::succ(r))

reduce Nat::add(1, 2)


def quick_maffs: Eq(Nat, Nat::add(2, 2), 4) := Eq::refl(Nat, 4)


