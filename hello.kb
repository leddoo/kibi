def congr_arg.{a, b} (A: Sort(a), B: Sort(b), f: Pi(_: A) -> B, x1: A, x2: A)
    : Pi (_: Eq(A, x1, x2)) -> Eq.{b}(B, f(x1), f(x2))
    := lam(heq: Eq(A, x1, x2)) =>
        Eq::rec(A, x1, x2, heq,
            lam(x2: A) => Eq(B, f(x1), f(x2)),
            Eq::refl(B, f(x1)))


def Nat::add_zero (n: Nat): Eq(Nat, Nat::add(n, 0), n) :=
    Eq::refl(Nat, n)

def Nat::zero_add (n: Nat): Eq(Nat, Nat::add(0, n), n) :=
    Nat::rec(n,
        lam(n: Nat) => Eq(Nat, Nat::add(0, n), n),
        Eq::refl(Nat, 0),
        lam(n: Nat, ih: Eq(Nat, Nat::add(0, n), n)) =>
            congr_arg(Nat, Nat, Nat::succ, Nat::add(0, n), n, ih))


